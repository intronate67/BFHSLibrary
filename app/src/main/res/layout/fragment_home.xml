<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.huntersharpe.bfhslibrary.Home">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="132dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/profPicDesc"
        android:src="?android:attr/alertDialogIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeBackTextView" />

    <TextView
        android:id="@+id/welcomeBackTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/welcomeBackLabel"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namePlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/welcomeBackTextView"
        android:layout_alignBottom="@+id/welcomeBackTextView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/welcomeBackTextView"
        android:text="@string/user"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/welcomeBackTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prbTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ccobTextView"
        android:layout_below="@+id/ccobTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/prbLabel"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccobLinLay" />

    <TextView
        android:id="@+id/ccobTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/namePlaceholder"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/ccobLabel"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <LinearLayout
        android:id="@+id/ccobLinLay"
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/cell_shape"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccobTextView">

        <TextView
            android:id="@+id/ccobTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nullText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="111dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cell_shape"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prbTextView">

        <TextView
            android:id="@+id/prbTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nullText" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
